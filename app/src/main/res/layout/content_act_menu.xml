<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uom.formativemobileassessment.project.act_menu"
    tools:showIn="@layout/activity_act_menu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Activities"
            android:id="@+id/txtActivities"
            android:layout_below="@+id/view3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start Questionnaire"
            android:id="@+id/txtStartQuestionnaire"
            android:layout_below="@+id/txtActivities"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgStartQuestionnaire"
            android:background="@drawable/questn"
            android:layout_below="@+id/txtStartQuestionnaire"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="questionnaire"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Answer Quick Question"
            android:id="@+id/txtAnswerQuickQuestion"
            android:layout_below="@+id/imgStartQuestionnaire"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgAnswerQQ"
            android:background="@drawable/questions"
            android:layout_below="@+id/txtAnswerQuickQuestion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="question"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start Space Race"
            android:id="@+id/txtStartSpaceRace"
            android:layout_below="@+id/imgAnswerQQ"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgSpaceRace"
            android:background="@drawable/space"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtStartSpaceRace"
            android:layout_marginTop="10dp"
            android:onClick="space"/>

    </RelativeLayout>
</ScrollView>
